<h1>{{title}}</h1>
<p>Showing {{data.length}} properties with custom helper applied</p>

<table>
    <thead>
    <tr>
        <th>Image</th>
        <th>ID</th>
        <th>Name</th>
        <th>Neighbourhood</th>
        <th>Room Type</th>
        <th>Price</th>
        <th>Rating</th>
    </tr>
    </thead>
    <tbody>
    {{#each data}}
        <tr>
            <td>
                <img src="{{this.thumbnail}}" alt="{{this.NAME}}" width="100" height="75">
            </td>
            <td>{{this.id}}</td>
            <td>{{{replaceEmptyName this.NAME}}}</td>
            <td>{{this.neighbourhood}}</td>
            <td>{{this.[room type]}}</td>
            <td>${{formatPrice this.price}}</td>
            <td>{{this.[review rate number]}}/5</td>
        </tr>
    {{/each}}
    </tbody>
</table>

<div style="margin-top: 2rem;">
    <a href="/viewData" class="btn">‚Üê Back to Regular View</a>
</div>