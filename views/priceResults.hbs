<h1>{{title}}</h1>

<p>Showing properties between ${{minPrice}} and ${{maxPrice}}</p>
<p>Found {{results.length}} properties</p>

{{#if results.length}}
    <table>
        <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Neighbourhood</th>
            <th>Room Type</th>
            <th>Price</th>
            <th>Rating</th>
        </tr>
        </thead>
        <tbody>
        {{#each results}}
            <tr>
                <td>
                    <img src="{{this.thumbnail}}" alt="{{this.NAME}}" width="80" height="60">
                </td>
                <td>{{this.NAME}}</td>
                <td>{{this.neighbourhood}}</td>
                <td>{{this.[room type]}}</td>  <!-- Fixed -->
                <td>{{this.price}}</td>
                <td>{{this.[review rate number]}}/5</td>  <!-- Fixed -->
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No properties found in this price range.</p>
{{/if}}

<div style="margin-top: 2rem;">
    <a href="/viewData/price">‚Üê New Price Search</a> |
    <a href="/viewData">View All Data</a>
</div>